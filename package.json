{
  "name": "brs-emu",
  "version": "0.10.23",
  "description": "BrightScript Emulator",
  "author": "Marcelo Lv Cabral <marcelo@lvcabral.com> (https://lvcabral.com/)",
  "homepage": "https://lvcabral.com/brs/",
  "contributors": [
    "Sean Barag <sean@barag.org>",
    "Mark Pearce"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lvcabral/brs-emu"
  },
  "keywords": [
    "brightscript",
    "roku",
    "emulator",
    "webworker",
    "worker"
  ],
  "license": "MIT",
  "main": "app/lib/brsEmu.js",
  "browser": "app/lib/brsEmu.js",
  "typings": "types/src/api/index.d.ts",
  "bin": {
    "brs-cli": "./bin/cli.mjs"
  },
  "scripts": {
    "build": "webpack --env development",
    "release": "webpack --env production",
    "clean": "rimraf ./app/lib/brsEmu* ./types",
    "test": "jest",
    "lint": "tslint --project .",
    "prettier:write": "prettier --write \"{app,src,test}/**/*.{js,ts}\"",
    "prettier": "prettier --check \"{app,src,test}/**/*.{js,ts}\"",
    "prepublishOnly": "npm-run-all --serial clean build lint prettier"
  },
  "files": [
    "app/audio/",
    "app/fonts/",
    "app/lib/brsEmu.worker.js",
    "types/src/api/"
  ],
  "dependencies": {
    "commander": "^2.12.2",
    "crc": "^3.8.0",
    "decode-bmp": "^0.1.0",
    "file-type": "^12.4.2",
    "howler": "^2.2.3",
    "jpeg-js": "^0.4.4",
    "jszip": "^3.10.1",
    "libwebpjs": "lvcabral/libwebpjs",
    "long": "^3.2.0",
    "luxon": "^1.8.3",
    "memory-fs": "^0.5.0",
    "nanomatch": "^1.2.13",
    "omggif": "^1.0.10",
    "opentype.js": "^1.3.4",
    "path-browserify": "^1.0.1",
    "path-parse": "^1.0.6",
    "readable-stream": "^4.3.0",
    "sprintf-js": "^1.1.2",
    "stats.js": "^0.17.0",
    "stream-browserify": "^3.0.0",
    "ua-parser-js": "^1.0.34",
    "upng-js": "^2.1.0",
    "url-parse": "^1.5.10",
    "xml2js": "^0.5.0"
  },
  "devDependencies": {
    "@types/crc": "^3.4.0",
    "@types/howler": "^2.2.7",
    "@types/long": "^3.0.32",
    "@types/luxon": "^1.4.1",
    "@types/memory-fs": "^0.3.2",
    "@types/node": "^8.10.52",
    "@types/opentype.js": "^0.7.2",
    "@types/path-parse": "^1.0.19",
    "@types/sprintf-js": "^1.1.2",
    "@types/stats.js": "^0.17.0",
    "@types/ua-parser-js": "^0.7.36",
    "@types/upng-js": "^2.1.1",
    "@types/url-parse": "^1.4.8",
    "@types/xml2js": "^0.4.8",
    "buffer": "^6.0.3",
    "husky": ">=1",
    "javascript-obfuscator": "^4.0.2",
    "jest": "^29.4.3",
    "jest-junit": "^6.1.0",
    "lint-staged": ">=8",
    "lolex": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2",
    "process": "^0.11.10",
    "rimraf": "^2.6.2",
    "ts-loader": "^8.4.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-obfuscator": "^3.5.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "printWidth": 100
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "git add"
    ]
  }
}
