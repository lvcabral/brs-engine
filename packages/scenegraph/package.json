{
    "name": "brs-scenegraph",
    "version": "0.0.1",
    "description": "SceneGraph addon for BrightScript Simulation Engine",
    "main": "lib/brs-sg.node.js",
    "browser": "lib/brs-sg.js",
    "types": "types/index.d.ts",
    "files": [
        "assets/",
        "lib/*.LICENSE.txt",
        "types/",
        "CHANGELOG.md"
    ],
    "scripts": {
        "build": "webpack --config ./config/webpack.config.js --env development && tsc --project ./config/tsconfig.json",
        "release": "webpack --config ./config/webpack.config.js --env production && tsc --project ./config/tsconfig.json",
        "clean": "rimraf ./lib ./types ./assets",
        "test": "jest",
        "prepublishOnly": "npm-run-all --serial clean release"
    },
    "dependencies": {
        "brs-engine": "^2.0.0-alpha.25",
        "xmldoc": "^1.3.0",
        "p-settle": "^5.1.1"
    },
    "devDependencies": {
        "@types/node": "^22.13.2",
        "@types/xmldoc": "^1.1.9",
        "typescript": "^5.7.3",
        "rimraf": "^2.6.2",
        "jest": "^29.4.3",
        "process": "^0.11.10",
        "webpack": "^5.97.1",
        "webpack-cli": "^5.0.1",
        "ts-loader": "^9.5.1",
        "ifdef-loader": "^2.3.2",
        "copy-webpack-plugin": "^12.0.2",
        "zip-webpack-plugin": "^4.0.3"
    }
}