    "clean": "rimraf ./bin ./types ./assets",
    "prepublishOnly": "npm-run-all --serial clean release build:sg",
    "prepack": "cp ../../CHANGELOG.md . && cp ../../LICENSE .",
    "postpack": "rm CHANGELOG.md LICENSE"
